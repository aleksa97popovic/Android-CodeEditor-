  <div class="main-container" id="authContainer">
    <img class="duck-inner" src="https://upload.wikimedia.org/wikipedia/en/thumb/f/f4/Daffy_Duck.svg/800px-Daffy_Duck.svg.png" alt="Daffy Duck">
    <h2 id="formTitle">ü¶Ü Prijava</h2>

    <form id="loginForm">
      <input type="text" id="loginUser" placeholder="Korisniƒçko ime" required>
      <input type="password" id="loginPass" placeholder="Lozinka" required>
      <button type="submit">Uloguj se</button>
    </form>

    <form id="signupForm" style="display:none;">
      <input type="text" id="regUser" placeholder="Korisniƒçko ime" required>
      <input type="email" id="regEmail" placeholder="Email" required>
      <input type="text" id="regIme" placeholder="Ime i prezime" required>
      <input type="number" id="regGodina" placeholder="Godina roƒëenja" min="1900" max="2026" required>
      <input type="password" id="regPass" placeholder="Lozinka" required>
      <input type="password" id="regConfirm" placeholder="Potvrdi lozinku" required>
      <button type="submit">Registruj se ü¶Ü</button>
    </form>

    <p class="error" id="formError"></p>

    <div class="toggle-link">
      <span id="toggleText">üìù Nema≈° nalog? <a onclick="toggleForm()">Registruj se</a></span>
    </div>
  </div>

  <div class="main-container" id="dashboard" style="display:none; width:80%; max-width:900px;">
    <img class="duck-inner" src="https://upload.wikimedia.org/wikipedia/en/thumb/f/f4/Daffy_Duck.svg/800px-Daffy_Duck.svg.png">
    <h2>üìä Daffy Duck Dashboard</h2>
    <p>Dobrodo≈°ao, <strong id="welcomeUser"></strong>!</p>

    <div class="table-section">
      <table id="userTable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Korisniƒçko ime</th>
            <th>Ime</th>
            <th>Email</th>
            <th>Godina</th>
            <th>Akcija</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>

    <button onclick="logout()">üö™ Odjavi se</button>
  </div>

  <script>
    let users = [];
    let userId = 1;

    const loginForm = document.getElementById("loginForm");
    const signupForm = document.getElementById("signupForm");
    const formTitle = document.getElementById("formTitle");
    const toggleText = document.getElementById("toggleText");
    const errorMsg = document.getElementById("formError");
    const dashboard = document.getElementById("dashboard");
    const authContainer = document.getElementById("authContainer");
    const userTable = document.querySelector("#userTable tbody");
    const welcome = document.getElementById("welcomeUser");

    function toggleForm() {
      if (signupForm.style.display === "none") {
        signupForm.style.display = "block";
        loginForm.style.display = "none";
        formTitle.textContent = "ü¶Ü Registracija";
        toggleText.innerHTML = 'üì• Veƒá ima≈° nalog? <a onclick="toggleForm()">Uloguj se ovde</a>';
      } else {
        signupForm.style.display = "none";
        loginForm.style.display = "block";
        formTitle.textContent = "ü¶Ü Prijava";
        toggleText.innerHTML = 'üìù Nema≈° nalog? <a onclick="toggleForm()">Registruj se</a>';
      }
      errorMsg.style.display = "none";
    }

    signupForm.addEventListener("submit", e => {
      e.preventDefault();

      const username = document.getElementById("regUser").value.trim();
      const email = document.getElementById("regEmail").value.trim();
      const ime = document.getElementById("regIme").value.trim();
      const godina = +document.getElementById("regGodina").value;
      const pass = document.getElementById("regPass").value;
      const confirm = document.getElementById("regConfirm").value;

      if (pass !== confirm) {
        errorMsg.textContent = "‚ùå Lozinke se ne poklapaju!";
        errorMsg.style.display = "block";
        return;
      }

      const novi = { id: userId++, username, email, ime, godina };
      users.push(novi);

      alert(`‚úÖ Korisnik ${ime} saƒçuvan u bazi!`);

      signupForm.reset();
      toggleForm();
    });

    loginForm.addEventListener("submit", e => {
      e.preventDefault();

      const user = document.getElementById("loginUser").value.trim();
      const pass = document.getElementById("loginPass").value.trim();

      if (!user || !pass) {
        errorMsg.textContent = "‚ùå Popuni korisniƒçko ime i lozinku!";
        errorMsg.style.display = "block";
        return;
      }

      showDashboard(user);
    });

    function showDashboard(user) {
      authContainer.style.display = "none";
      dashboard.style.display = "block";
      welcome.textContent = user;
      renderTable();
    }

    function renderTable() {
      userTable.innerHTML = "";

      if (users.length === 0) {
        userTable.innerHTML = '<tr><td colspan="6">ü¶Ü Jo≈° nema korisnika u bazi!</td></tr>';
        return;
      }

      users.forEach(u => {
        const row = document.createElement("tr");
        row.innerHTML = `
          <td>${u.id}</td>
          <td>${u.username}</td>
          <td>${u.ime}</td>
          <td>${u.email}</td>
          <td>${u.godina}</td>
          <td><a href="#" onclick="deleteUser(${u.id})">üóë</a></td>
        `;
        userTable.appendChild(row);
      });
    }

    function deleteUser(id) {
      users = users.filter(u => u.id !== id);
      renderTable();
    }

    function logout() {
      dashboard.style.display = "none";
      authContainer.style.display = "block";
      loginForm.reset();
    }
  </script>
</body>
